<div class="row" id="logInController" ng-controller="LogInController as vm">
    <div class="card-panel col s12 m8 offset-m2 l4 offset-l4 z-depth-4">
        <form action="/session/logon" class="login-form" method="post" name="vm.formLogIn" novalidate="novalidate">
            
            <div class="row">
                <img class="col s6 offset-s3" src="/images/icon716x573.png" alt="icon716x573">
                <div class ="col s6 offset-s3">
                    <h4 class="center-align light-green-text">Visual Mail</h4>
                </div>
            </div>

            <div class="input-field col s9 offset-s1">
                <i class="light-green-text material-icons prefix small">person_pin</i>
                <input class="validate" id="email" name="email" required="required" type="email" 
                    ng-model="vm.email" 
                    ng-pattern="/^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i">
                <label for="email">Email</label>
            </div>

            <div class="input-field col s9 offset-s1">
                <i class="light-green-text small material-icons prefix">lock</i>
                <input id="password" name="password" ng-model="vm.password" required="required" type="password">
                <label for="password">Contraseña</label>
            </div>

            <div id="logInMessage" style="display: none;">
                <div class="row container card red lighten-1 col s8 offset-s2" 
                    ng-if="(vm.formLogIn.$submitted || !vm.formLogIn.email.$pristine) && !vm.formLogIn.email.$valid">
                    <div class="card-content white-text center">
                        <strong>Verificar el correo electrónico</strong>
                    </div>
                </div>
            </div>

            <div class="row container"> 
                <button class="btn-large col s12 m12 l8 offset-l2 light-green waves-effect waves-light" type="submit"
                    ng-disabled="!vm.formLogIn.email.$valid || !vm.formLogIn.password.$valid">Iniciar Sesión</button>
                <input type="hidden" name="_csrf" value="<%= _csrf%>" />
            </div>

            <div class="row ">
                <div class="col s6"><a href="/session/signup" class="light-green-text">Regístrate</a></div>
                <div class="col s6 right-align"><a href="/session/forgotPassword" class="light-green-text">¿Olvidó la contraseña?</a></div>
            </div>

        </form>
    </div>
</div>
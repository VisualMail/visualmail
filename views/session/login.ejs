<script>
   var $toastContent = $('<span class="  color_acentuado-text">Credenciales inválidas</span>');

</script>
<div class= "row " ng-controller="LoginCtrl" >
   <div class=" z-depth-4 card-panel col s4 offset-s4 ">
     <form name="loginform" action="/session/create" class ="login-form" method="post" novalidate>


       <div class="row ">
      
        <img class="col s6 offset-s3"src="/images/iconobigsinfondo.png" alt="">
       <div class ="row col s6 offset-s3">
          <h4 class="center light-green-text"> Visual Mail</h4>
       </div>
       </div>

       <div class= "row ">
         <div class="input-field col s7 offset-s1">
           <i class= "light-green-text small material-icons prefix">
             person_pin</i>
           <input type="email" name="email" id="email" ng-model="email" placeholder="hola@visualmail.com" 
           ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/">
           <label for="email" > Email</label>
         </div>
         <div ng-messages="loginform.email.$error" role="alert" class="col s4 centerme red-text" >
            <div ng-message="email">Formato no válido</div>
            <div ng-message="pattern">Formato no válido</div>
         </div>
         <!--
         <div class="input-field col s4 centerme" >
           <div class="light-green-text"> Formato inválido</div>
         </div>-->
       </div>

       <div class="row ">
         <div class="input-field col s7 offset-s1">
           <i class="light-green-text small material-icons prefix"> lock</i>
           <input type="password" name="password" id="password">
           <label for="password" >Contraseña</label>
         </div>
       </div>
    
       <div class="row  container"> 
          <button type="submit" class="waves-effect waves-light btn-large light-green col s6" > Iniciar Sesión </button>
          <input type="hidden" name="_csrf" value="<%= _csrf%>"/>
       </div>
             <div class ="row">
          <div class="col s7 offset-s1">
            <% if(flash && flash.err){ %>
                <!--<h6 class="red-text"> Credenciales inválidas </h6>
          
              <% Object.keys(flash.err).forEach(function(error){ %>
              <li><%= JSON.stringify(flash.err[error])%></li>
              <%})%>
            -->
            <script>Materialize.toast($toastContent, 5000);</script>
          <% } %>

        </div>
       </div>



       <div class="row ">
         <div class="col s6"><a href="/user/signup" class="light-green-text"> Registrate</a></div>
         <div class="col s6 "><a href="/" class="light-green-text"> ¿Olvido la contraseña?</a></div>
       </div>


  </form>
    </div>
</div>

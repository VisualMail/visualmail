<div class="container">
    <h3>Modificar la contrase単a</h3>
    <hr />

    <form action="/user/passwordActualizar" name="vm.formContenido" method="post">
        
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"> 
                    <label for="userPassword">Contrase単a actual</label> 
                    <input class="form-control" id="userPassword" name="userPassword" required="required" type="password" /> 
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row"> 
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"> 
                    <label for="userPasswordNew">Nueva contrase単a</label> 
                    <input class="form-control" id="userPasswordNew" name="userPasswordNew" required="required" type="password" /> 
                </div> 
            </div> 
        </div>

        <div class="form-group">
            <div class="row"> 
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"> 
                    <label for="userPasswordConfirm">Nueva contrase単a</label> 
                    <input class="form-control" id="userPasswordConfirm" name="userPasswordConfirm" required="required" type="password" /> 
                </div> 
            </div> 
        </div>

        <div class="form-group">
            <div class="row"> 
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
                    <button class="btn btn-success" type="submit"> 
                        <span class="glyphicon glyphicon-floppy"></span> 
                        Guardar cambios 
                    </button> 
                    <input type="hidden" name="_csrf" value="<%= _csrf%>" /> 
                </div> 
            </div> 
        </div>

        <% if(session.passwordMessage) { %>
        <% if(session.passwordMessage.result) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert"> 
        <% } else { %>  
        <div class="alert alert-warning alert-dismissible fade show" role="alert"> 
        <% } %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"> 
                <span aria-hidden="true">&times;</span> 
            </button> 
            <strong>Holy guacamole!</strong> <%= session.passwordMessage.message %>
        </div>
        <% } delete session.passwordMessage; %>


    </form>
</div>